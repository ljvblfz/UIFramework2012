<UserControl x:Class="ComponentArt.SOA.Demos.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:ComponentArt="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"
    >
    <Grid x:Name="LayoutRoot" Background="White">
        <TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="Menu" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Menu SOA Simple Loading" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" >
            <Run>• On load, the Menu control instance automatically downloads its item data from a SOA.UI web service.</Run><LineBreak/>
        </TextBlock>
        <ComponentArt:Menu x:Name="SimpleSoaLoad" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"
                           SoaServiceUrl="../Services/SoaMenuDemoService.svc" />
    </Grid>
</UserControl>
