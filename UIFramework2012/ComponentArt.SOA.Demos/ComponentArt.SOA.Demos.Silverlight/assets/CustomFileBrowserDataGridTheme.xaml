    <Style TargetType="Border" x:Key="ComponentArt_DataGrid_HeaderBorder">
      <Setter Property="BorderBrush" Value="#bbbbbb" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Height" Value="36" />
    </Style>

    <Style TargetType="Border" x:Key="ComponentArt_DataGrid_FooterBorder">
      <Setter Property="Padding" Value="10,5" />
      <Setter Property="CornerRadius" Value="0" />
      <Setter Property="Background" Value="{StaticResource ComponentArt_DataGrid_FooterBackground}" />
      <Setter Property="BorderBrush" Value="#bbbbbb" />
      <Setter Property="BorderThickness" Value="0,1,0,0" />
    </Style>


    <Style TargetType="ComponentArt:DataGridCell">
      <Setter Property="Padding" Value="0,5,0,0" />
      <Setter Property="Height" Value="22" />
    </Style>

    <Style TargetType="ComponentArt:DataGridColumnHeader">
      <Setter Property="IsTabStop" Value="False" />
      <Setter Property="Height" Value="22" />
      <Setter Property="BorderThickness" Value="0,0,1,1" />
      <Setter Property="Cursor" Value="Arrow" />
      <Setter Property="VerticalAlignment" Value="Center" />
      <Setter Property="Padding" Value="4,0,0,0" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ComponentArt:DataGridColumnHeader">
            <Grid x:Name="RootElement" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Cursor="{ TemplateBinding Cursor }" Height="{ TemplateBinding Height }" >
              <Grid.ColumnDefinitions>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
              </Grid.RowDefinitions>

              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                  <VisualState x:Name="Normal" />
                  <VisualState x:Name="MouseOver">
                    <Storyboard>
                      <DoubleAnimation Storyboard.TargetName="ColumnHeaderHoverBorder" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1" />
                    </Storyboard>
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>

              <Border
                  Height="{ TemplateBinding Height }"
                  BorderBrush="{ StaticResource ComponentArt_DataGrid_ColumnHeaderBorderBrush }"
                  Background="{ StaticResource ComponentArt_DataGrid_ColumnHeaderBackground }"
                  x:Name="ColumnHeaderBorder"
                  BorderThickness="{ TemplateBinding BorderThickness }"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
							/>

              <Border
                  Height="{TemplateBinding Height}"
                  BorderBrush="{ StaticResource ComponentArt_DataGrid_ColumnHeaderHoverBorderBrush }"
                  Background="{ StaticResource ComponentArt_DataGrid_ColumnHeaderHoverBackground }"
                  x:Name="ColumnHeaderHoverBorder"
                  BorderThickness="{ TemplateBinding BorderThickness }"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Opacity="0"
							/>

              <ContentPresenter
                Content="{TemplateBinding Content}"
                ContentTemplate="{TemplateBinding ContentTemplate}"
                Margin="{TemplateBinding Padding}"
                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
							/>

              <ContentControl x:Name="AscendingArrow" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Template="{StaticResource ComponentArt_DataGrid_ColumnHeadingAscendingArrow}" />
              <ContentControl x:Name="DescendingArrow" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Template="{StaticResource ComponentArt_DataGrid_ColumnHeadingDescendingArrow}" />
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style TargetType="ComponentArt:DataGridGroupBox">
      <Setter Property="Margin" Value="0,-1,2,0" />
      <Setter Property="Background" Value="{ StaticResource ComponentArt_DataGrid_GroupBoxBackground }" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ComponentArt:DataGridGroupBox">
            <Grid x:Name="RootElement" VerticalAlignment="Center" Margin="{TemplateBinding Margin}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>

              <Border Padding="0" BorderBrush="{ StaticResource ComponentArt_DataGrid_GroupBox_OuterBorderBrush }" BorderThickness="1" Grid.ColumnSpan="2" CornerRadius="0">
                <Border Padding="5" BorderBrush="{ StaticResource ComponentArt_DataGrid_GroupBox_InnerBorderBrush }" BorderThickness="0" CornerRadius="0" Background="{ TemplateBinding Background }" />
              </Border>

              <TextBlock Padding="6" FontWeight="Bold" Foreground="{ StaticResource ComponentArt_DataGrid_GroupBox_TextColor }" Text="{ Binding }" />

              <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Padding="7" x:Name="AscendingArrow" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupingAscendingArrowButton}" />
                <Button Padding="7" x:Name="DescendingArrow" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupingDescendingArrowButton}" />

                <Button x:Name="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="7,3,4,0" Style="{StaticResource ComponentArt_DataGrid_GroupBoxClose}" />
              </StackPanel>

            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


  </ResourceDictionary>