<UserControl x:Class="ComponentArt.Silverlight.Demos.TreeViewSOAUIAutomatic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"
    >
    <Grid>
        <TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="TreeView" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="SOA.UI Automatic Web Service" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo showcases SOA.UI data binding automation in TreeView." />
        <TextBlock 
        x:Name="DemoCodeFiles" 
        Visibility = "Collapsed"
        Text="\source\controls\treeview\TreeViewSOAUIAutomatic.xaml,
            \source\controls\treeview\TreeViewSOAUIAutomatic.xaml.cs" />

        <my:TreeView SoaServiceUrl="../TreeViewFileBrowserService.svc" IsLoadOnDemandEnabled="True" Height="500" Width="300" 
                     ExpanderClosedIconSource="icons/FileBrowser/plus.png" ExpanderOpenIconSource="icons/FileBrowser/minus.png"  />


    </Grid>
</UserControl>
