<UserControl x:Class="ComponentArt.Silverlight.Demos.TreeViewCheckboxFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="TreeView" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Tree Editing" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo showcases TreeView's checkboxes." />
        <TextBlock 
        x:Name="DemoCodeFiles" 
        Visibility = "Collapsed"
        Text="\source\controls\treeview\TreeViewCheckboxFeatures.xaml,
            \source\controls\treeview\TreeViewCheckboxFeatures.xaml.cs" />

        <Border Grid.Row="0" Grid.Column="1" Margin="50 0 0 0" HorizontalAlignment="Left" Width="250" Height="300" CornerRadius="5" Background="#eeeeee" BorderBrush="#cccccc" BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="CheckBox events:" VerticalAlignment="Top" x:Name="LongDescription" Margin="10 10 10 5" Visibility="Visible" TextWrapping="Wrap" />
                <ListBox Grid.Row="1" x:Name="Selection" Margin="10 0 0 0" Width="230" HorizontalAlignment="Left" />
                <Button Grid.Row="2" x:Name="Clear" Content="  Clear  " Click="Clear_Click" HorizontalAlignment="Center" Margin="10" />
            </Grid>
        </Border>

        <my:TreeView x:Name="CheckboxTree" NodeChecked="CheckboxTree_NodeChecked" ExpandNodeOnSelect="False" CollapseNodeOnSelect="False" ExpanderClosedIconSource="" ExpanderOpenIconSource="" Grid.Row="0" Grid.Column="0"  Height="400" Width="250">
            <my:TreeViewNode Header="Two-state checkboxes" IconSource="icons/folder.png" IsExpanded="True">
                <my:TreeViewNode Header="John" IconSource="icons/contacts.png" CheckBoxMode="TwoState" />
                <my:TreeViewNode Header="Marie" IconSource="icons/contacts.png" CheckBoxMode="TwoState"/>
                <my:TreeViewNode Header="Victoria" IconSource="icons/contacts.png" CheckBoxMode="TwoState" />
            </my:TreeViewNode>

            <my:TreeViewNode Header="Cascading checkboxes" IconSource="icons/folder.png" IsExpanded="True">
                <my:TreeViewNode Header="Search" IconSource="icons/search.png" CheckBoxMode="AutoThreeState" IsExpanded="True" >
                    <my:TreeViewNode Header="Inbox" IconSource="icons/inbox.png" IsExpanded="True" CheckBoxMode="AutoThreeState">
                        <my:TreeViewNode Header="ComponentArt" IconSource="icons/folders.png" CheckBoxMode="TwoState" />
                        <my:TreeViewNode Header="Personal" IconSource="icons/folders.png" CheckBoxMode="TwoState" />
                        <my:TreeViewNode Header="Miscellaneous" IconSource="icons/folders.png" CheckBoxMode="TwoState" />
                    </my:TreeViewNode>
                    <my:TreeViewNode Header="Junk E-mail" IconSource="icons/junk.png"  CheckBoxMode="TwoState"/>
                    <my:TreeViewNode Header="Outbox" IconSource="icons/outbox.png"  CheckBoxMode="TwoState"/>
                    <my:TreeViewNode Header="Sent Items" IconSource="icons/sentItems.png"  CheckBoxMode="TwoState"/>
                </my:TreeViewNode>
            </my:TreeViewNode>

            <my:TreeViewNode Header="Three-state checkboxes" IconSource="icons/folder.png" IsExpanded="True">
                <my:TreeViewNode Header="Chris" IconSource="icons/contacts.png" CheckBoxMode="UserSelectableThreeState" />
                <my:TreeViewNode Header="Mark" IconSource="icons/contacts.png" CheckBoxMode="UserSelectableThreeState"  />
                <my:TreeViewNode Header="Gloria" IconSource="icons/contacts.png" CheckBoxMode="UserSelectableThreeState" />
            </my:TreeViewNode>
        </my:TreeView>
    </Grid>
</UserControl>
