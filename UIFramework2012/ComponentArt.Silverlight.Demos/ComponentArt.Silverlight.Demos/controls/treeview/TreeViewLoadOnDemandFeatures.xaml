<UserControl x:Class="ComponentArt.Silverlight.Demos.TreeViewLoadOnDemandFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"
    >
  <Grid>
  	<TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="TreeView" />
    <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Load on Demand Features" />
    <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo showcases TreeView's basic event-driven Load on Demand functionality." />
        <TextBlock 
        x:Name="DemoCodeFiles" 
        Visibility = "Collapsed"
        Text="\source\controls\treeview\TreeViewLoadOnDemandFeatures.xaml,
            \source\controls\treeview\TreeViewLoadOnDemandFeatures.xaml.cs" />
        <my:TreeView x:Name="FirstTree" LoadOnDemand="FirstTree_LoadOnDemand" IsLoadOnDemandEnabled="True" Height="500" Width="300" ExpanderClosedIconSource="icons/FileBrowser/plus.png" ExpanderOpenIconSource="icons/FileBrowser/minus.png"  />
    </Grid>
</UserControl>
