<UserControl x:Class="ComponentArt.Silverlight.Demos.MenuProgrammaticCreation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ComponentArtNav="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"
    Width="760" Height="450">
    <Grid x:Name="LayoutRoot" VerticalAlignment="Top">
    	<TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="Menu" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Programmatic Menu Creation" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo creates a Menu from C#." />
        <TextBlock 
            x:Name="DemoCodeFiles" 
            Visibility = "Collapsed"
            Text="\source\controls\menu\MenuProgrammaticCreation.xaml,
            \source\controls\menu\MenuProgrammaticCreation.xaml.cs"/>
        <Grid x:Name="MenuRoot" Height="34" VerticalAlignment="Top">

        </Grid>
        <Button Margin="0,45,0,0" Content="Click To Create" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
