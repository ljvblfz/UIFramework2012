<UserControl x:Class="ComponentArt.Silverlight.Demos.ContextMenuSimple"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:ComponentArt="clr-namespace:ComponentArt.Silverlight.UI.Navigation;assembly=ComponentArt.Silverlight.UI.Navigation"    
    xmlns:ComponentArtTheming="clr-namespace:ComponentArt.Silverlight.UI;assembly=ComponentArt.Silverlight.UI.Common">

    <UserControl.Resources>
        <ComponentArtTheming:Theme x:Key="Windows7" 
                      BaseSource="/ComponentArt.Silverlight.UI.Navigation;component/Themes/generic.xaml" 
                      Source="/ComponentArt.Silverlight.Themes.Windows7;component/ContextMenu.xaml"  />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Width="640" Height="480">
        <TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="ContextMenu" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Simple Context Menu Operation" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="Right-click anywhere in the box to activate the simple context menu." />
        <TextBlock 
            x:Name="DemoCodeFiles" 
            Visibility = "Collapsed"
            Text="\source\controls\contextmenu\ContextMenuSimple.xaml,
            \source\controls\contextmenu\ContextMenuSimple.xaml.cs"/>
        <ComponentArt:ContextMenu
			x:Name="SimpleMenu"
			Orientation="Vertical" 
			HorizontalAlignment="Left" 
			VerticalAlignment="Top"
			Theme="{StaticResource Windows7}"
            MenuClick="SimpleMenu_MenuClick"
            ShowType="FlyLine"
            ContextTarget="beigeBox"
            ContextType="ControlSpecific">
            <ComponentArt:MenuItem Text="New..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/New.png" />
            <ComponentArt:MenuItem Text="Open..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/Open.png" />
            <ComponentArt:MenuItem IsSeparator="True" IsEnabled="true" />
            <ComponentArt:MenuItem Text="Send To">
                <ComponentArt:MenuItem Text="Mail Recipient" IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/Send.png" />
                <ComponentArt:MenuItem Text="Mail Recipient (for Review)..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/RedFlagMail.png" />
                <ComponentArt:MenuItem Text="Routing Recipient..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/ToDoListEnvelope.png" />
                <ComponentArt:MenuItem Text="Exchange Folder..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/StickyPin.png" />
                <ComponentArt:MenuItem IsSeparator="True" IsEnabled="true" />
                <ComponentArt:MenuItem Text="Microsoft PowerPoint..." IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/PaperAndPictures.png" />
            </ComponentArt:MenuItem>
            <ComponentArt:MenuItem IsSeparator="True" IsEnabled="true" />
            <ComponentArt:MenuItem Text="Save" IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/Save.png" />
            <ComponentArt:MenuItem Text="Save As" />
            <ComponentArt:MenuItem Text="Save as Web Page" IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/SaveAsWebPage.png" />
            <ComponentArt:MenuItem Text="File Search" IconSource="/ComponentArt.Silverlight.Demos;component/Assets/Menu/FileSearch.png" />
            <ComponentArt:MenuItem IsSeparator="True" IsEnabled="true" />
            <ComponentArt:MenuItem Text="Exit" />
        </ComponentArt:ContextMenu>
        <Border Margin="9" CornerRadius="5" Background="#eeeeee" BorderBrush="#bbbbbb" BorderThickness="1" x:Name="beigeBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock UseLayoutRounding="True" Grid.Column="1" Grid.Row="1" Foreground="#323232" FontSize="12" FontWeight="Bold">Right-click anywhere inside this box.</TextBlock>
                <TextBlock UseLayoutRounding="True" Grid.Column="1" Grid.Row="3" Foreground="#555555" FontSize="11">(Yes... that includes you Firefox users)</TextBlock>
                <TextBlock VerticalAlignment="Bottom" x:Name="ControlEvent" UseLayoutRounding="True" Grid.Column="1" Grid.Row="4" Foreground="DarkRed" FontSize="11"></TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
