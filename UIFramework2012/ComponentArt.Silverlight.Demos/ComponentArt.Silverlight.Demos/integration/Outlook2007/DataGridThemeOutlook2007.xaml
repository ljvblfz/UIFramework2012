    <Style TargetType="Button" x:Key="ComponentArt_DataGrid_GroupBoxClose">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CloseButton" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="CloseButtonHover" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CloseButton" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="CloseButtonHover" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="CloseButton" Width="13" Height="12" BorderBrush="#00000000" BorderThickness="1" CornerRadius="2" Opacity="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#00ff2626" Offset="0" />
                                    <GradientStop Color="#00ff2626" Offset="0.5" />
                                    <GradientStop Color="#00af0000" Offset="0.5" />
                                    <GradientStop Color="#00cc0000" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid>
                                <Canvas Width="7" Height="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Fill="#ffff00" StrokeThickness="1" Data="F1 M 4.420898,3 L 6.998047,0 L 5.154297,0 L 3.499023,1.926758 L 1.844727,0 L 0.003906,0 L 2.577148,3 L 0,6 L 1.845703,6 L 3.499023,4.073730 L 5.154297,6 L 7,6 L 4.420898,3 Z">
                                        <Path.Stroke>
                                            <RadialGradientBrush Center="0.5,0.5">
                                                <GradientStop Color="#ffff00" Offset="0" />
                                                <GradientStop Color="#80ffff00" Offset="1" />
                                            </RadialGradientBrush>
                                        </Path.Stroke>
                                    </Path>
                                </Canvas>

                                <Canvas Width="7" Height="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Fill="#873c00" Data="F1 M 4.420898,3 L 6.998047,0 L 5.154297,0 L 3.499023,1.926758 L 1.844727,0 L 0.003906,0 L 2.577148,3 L 0,6 L 1.845703,6 L 3.499023,4.073730 L 5.154297,6 L 7,6 L 4.420898,3 Z" />
                                </Canvas>
                            </Grid>

                        </Border>

                        <Border x:Name="CloseButtonHover" Width="13" Height="12" BorderBrush="#bb5503" Background="#fbc84f" BorderThickness="1" CornerRadius="2" Opacity="0">
                            <Canvas Width="7" Height="6" VerticalAlignment="Center" HorizontalAlignment="Center">
