                                            <CArt_Nav:TreeViewNode Text="Large Mail" IconSource="folder.png" />
                                            <CArt_Nav:TreeViewNode Text="Unread Mail" IconSource="folder.png" />
                                        </CArt_Nav:TreeViewNode>
                                    </CArt_Nav:TreeViewNode>
                                    <CArt_Nav:TreeViewNode Text="Public Folders" IconSource="folder.png">
                                        <CArt_Nav:TreeViewNode Text="Sales" IconSource="folder.png" />
                                        <CArt_Nav:TreeViewNode Text="Hiring" IconSource="folder.png" />
                                        <CArt_Nav:TreeViewNode Text="HR" IconSource="folder.png" />
                                        <CArt_Nav:TreeViewNode Text="Projects" IconSource="folder.png" />
                                        <CArt_Nav:TreeViewNode Text="Legal" IconSource="folder.png" />
                                        <CArt_Nav:TreeViewNode Text="Marketing" IconSource="folder.png" />
                                    </CArt_Nav:TreeViewNode>
                                </CArt_Nav:TreeView>
                            <!-- /TreeView -->

                                <!-- Horizontal Splitter -->
                                <CArt_Layout:Splitter 
                            Theme="{StaticResource SplitterThemeOutlook2007}"
                            Height="10" 
                            CollapseButtonVisibility="Collapsed" 
                            Resizing="HorizontalResizing"
                            Background="{StaticResource splitter_imagebrush}"
                            x:Name="HorizontalSplitter1" 
                            CollapseDirection="Down" 
                            ShowsPreview="False" 
                            Grid.Column="0" Grid.Row="2">

                                </CArt_Layout:Splitter>

                                <!-- NavBar -->
                                <CArt_Nav:NavBar x:Name="MyNavBar"
                                         Grid.Row="3"
                   TextImageRelation="ImageBeforeText" 
                   GroupItemHeaderHorizontalAlignment="Left"
                   ItemHeaderHorizontalAlignment="Left"
                                         Theme="{ StaticResource Office2007NavBarTheme }"
                   >
                                    <CArt_Nav:NavBarItem Header="Mail" IsSelected="True" IconSource="mail.png">
                                    </CArt_Nav:NavBarItem>

                                    <CArt_Nav:NavBarItem Header="Calendar" IconSource="calendar.png">
                                    </CArt_Nav:NavBarItem>

                                    <CArt_Nav:NavBarItem Header="Contacts" IconSource="contacts.png">
                                    </CArt_Nav:NavBarItem>

                                    <CArt_Nav:NavBarItem Header="Tasks" IconSource="tasks.png">
                                    </CArt_Nav:NavBarItem>

                                    <CArt_Nav:NavBarItem Header="Notes" IconSource="notes.png">
                                    </CArt_Nav:NavBarItem>

                                    <CArt_Nav:NavBarItem Header="Folder List" IconSource="folderlist.png">
                                    </CArt_Nav:NavBarItem>
                                </CArt_Nav:NavBar>
                                <!-- /NavBar -->

                                <!-- ToolBar -->
                                <Border Grid.Row="4" >
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#e4f0fd" Offset="0" />
                                            <GradientStop Color="#c2dffc" Offset="0.38" />
                                            <GradientStop Color="#aad3fc" Offset="0.38" />
                                            <GradientStop Color="#c0ddfa" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <CArt_Nav:ToolBar
                                        Grid.Column="1"
				            Orientation="Horizontal"
				            x:Name="ToolBar2" 
				            Theme="{ StaticResource Office2007ToolBarTheme }"
			                >
                                        <CArt_Nav:ToolBarItem IconSource="icons/shortcuts.png" />
                                    </CArt_Nav:ToolBar>
                                </Grid>
                            </Border>
                            </Grid>
                            <!-- Vertical Splitter -->
                            <CArt_Layout:Splitter x:Name="VerticalSplitter1" Width="6" CollapseButtonVisibility="Collapsed"  CollapseDirection="Left" Background="#00FFFFFF" ShowsPreview="False" Grid.Column="1" Grid.Row="2">
                            </CArt_Layout:Splitter>

                            <Grid Grid.Row="2" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Grid -->
                            <StackPanel Orientation="Vertical" Grid.Row="0">
                                <Border BorderThickness="1" BorderBrush="#6593CF">
                                    <Border Height="23" BorderThickness="1,1,0,0" BorderBrush="White">
                                        <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#e3efff" Offset="0" />
                                            <GradientStop Color="#b1d3ff" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel Margin="7,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                                        <Image Margin="0,-2,0,0" Source="icons/inbox.png" Stretch="None" VerticalAlignment="Center"/>
                                        <TextBlock FontSize="14"  Foreground="#15428B" FontWeight="Bold" VerticalAlignment="Center" Margin="7,0,0,0"  Text="Inbox" />
                                    </StackPanel>
                                </Border>
                                </Border>
                                </StackPanel>
                                <CArt_Data:DataGrid x:Name="DataGrid1"
                                                     Grid.Row="1"
                           HeaderVisibility="Collapsed" BorderThickness="1,0,1,1" BorderBrush="#6593CF" FooterVisibility="Collapsed" Padding="0"
                           ItemsSource="{Binding}"
                           PageSize="11"
                           RunningMode="Client"
                           VerticalScrollBarVisibility="Auto"
                           GroupingMode="ConstantRows"
                           PreExpandGroups="True"
                           AllowGrouping="True"
                           AllowColumnResizing="True" 
                           ColumnResizingMode="Distribute"
                           RowClicked="DataGridClicked"
                           Theme="{StaticResource Office2007GridTheme}"
                           AllowColumnReordering="True">
                                    <CArt_Data:DataGrid.Columns>
                                        <CArt_Data:DataGridTemplateColumn Binding="{Binding}" Header="Thread" Width="4*">
                                            <CArt_Data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding EmailIcon}" Stretch="None" Margin="5"/>
                                                        <StackPanel Orientation="Vertical">
                                                            <TextBlock Text="{Binding StartedBy}" Margin="2"/>
                                                            <TextBlock Text="{Binding Subject}" Foreground="Gray" Margin="2"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </CArt_Data:DataGridTemplateColumn.CellTemplate>
                                            <CArt_Data:DataGridTemplateColumn.CellStyle>
                                                <Style TargetType="CArt_Data:DataGridCell">
                                                    <Setter Property="Padding" Value="1" />
                                                </Style>
                                            </CArt_Data:DataGridTemplateColumn.CellStyle>
                                        </CArt_Data:DataGridTemplateColumn>
                                        <CArt_Data:DataGridTemplateColumn Binding="{Binding}" Header="Last Post" Width="2*">
                                            <CArt_Data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch">
                                                            <TextBlock Text="{Binding LastPostDate}" />
                                                            <Grid>
                                                                <Image Source="{Binding PriorityIcon}" Stretch="None" HorizontalAlignment="Right" />
                                                                <Image Source="{Binding AttachmentIcon}" Stretch="None" HorizontalAlignment="Right" />
                                                            </Grid>
                                                        </StackPanel>
                                                        <CheckBox Grid.Column="1" VerticalAlignment="Center" Margin="2" />
                                                        <Image Grid.Column="2"  Source="{Binding FlagIcon}" Stretch="None" Margin="2"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CArt_Data:DataGridTemplateColumn.CellTemplate>
                                            <CArt_Data:DataGridTemplateColumn.CellStyle>
                                                <Style TargetType="CArt_Data:DataGridCell">
                                                    <Setter Property="Padding" Value="1" />
                                                </Style>
                                            </CArt_Data:DataGridTemplateColumn.CellStyle>
                                        </CArt_Data:DataGridTemplateColumn>
                                    </CArt_Data:DataGrid.Columns>
                                    <CArt_Data:DataGrid.SliderPopupTemplate>
                                        <DataTemplate>
                                            <Grid Height="90" Width="300">
                                                <Border Margin="2,2,-2,-2" Background="#1A000000" CornerRadius="4" />
                                                <Border BorderBrush="Black" BorderThickness="1" Height="90" Width="300" Background="Black" CornerRadius="4">
                                                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                        <Border CornerRadius="3" Background="White" Margin="3,3,3,1" HorizontalAlignment="Stretch">
                                                            <Grid HorizontalAlignment="Stretch" Height="60">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="40" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="28"/>
                                                                </Grid.RowDefinitions>

                                                                <Image Source="{Binding DataItem.LargeEmailIcon}" Margin="1" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="None"/>

                                                                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="5">
                                                                    <Image Source="{Binding DataItem.PriorityIcon}" Stretch="None" Margin="3"/>
                                                                    <Image Source="{Binding DataItem.AttachmentIcon}" Stretch="None" Margin="3"/>
                                                                    <Image Source="{Binding DataItem.FlagIcon}" Stretch="None" Margin="3"/>
                                                                </StackPanel>

                                                                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="2,3,0,0">
                                                                    <TextBlock Text="{Binding DataItem.StartedBy}" FontSize="10" />
                                                                    <TextBlock Text="{Binding DataItem.LastPostDate}" FontSize="10" />
                                                                </StackPanel>

                                                                <TextBlock Margin="10,5,7,3" FontWeight="Bold" TextWrapping="NoWrap" Text="{Binding DataItem.Subject}" Grid.ColumnSpan="3" Grid.Row="1" />
                                                                <Rectangle Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Right" Width="40" Margin="7">
                                                                    <Rectangle.Fill>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                            <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                                            <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Rectangle.Fill>
                                                                </Rectangle>
                                                            </Grid>
                                                        </Border>

                                                        <Grid HorizontalAlignment="Stretch" Height="20">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*"/>
                                                                <ColumnDefinition Width="1*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid.Background>
                                                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                                    <GradientStop Color="#FF777777" />
                                                                    <GradientStop Color="#FF555555" Offset=".4"/>
                                                                    <GradientStop Color="#FF000000" Offset=".45"/>
                                                                </LinearGradientBrush>
                                                            </Grid.Background>

                                                            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="3">
                                                                <TextBlock Foreground="White" Text="Page "/>
                                                                <TextBlock Foreground="White" Text="{Binding PageNumber}" FontWeight="Bold" />
                                                                <TextBlock Foreground="White" Text=" of "/>
                                                                <TextBlock Foreground="White" Text="{Binding Owner.PageCount}" FontWeight="Bold" />
                                                            </StackPanel>

                                                            <Border HorizontalAlignment="Right" Width="2" BorderThickness="1,0,1,0" Margin="0,2,0,2">
                                                                <Border.BorderBrush>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                        <GradientStop Color="#FF444444" Offset="0"/>
                                                                        <GradientStop Color="#FFAAAAAA" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Border.BorderBrush>
                                                            </Border>

                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Margin="3">
                                                                <TextBlock Foreground="White" Text="Message "/>
                                                                <TextBlock Foreground="White" Text="{Binding RecordNumber}" FontWeight="Bold" />
                                                                <TextBlock Foreground="White" Text=" of "/>
                                                                <TextBlock Foreground="White" Text="{Binding Owner.RecordCount}" FontWeight="Bold" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </CArt_Data:DataGrid.SliderPopupTemplate>
                                    <CArt_Data:DataGrid.CellStyle>
                                        <Style TargetType="CArt_Data:DataGridCell">
                                            <Setter Property="Padding" Value="3" />
                                        </Style>
                                    </CArt_Data:DataGrid.CellStyle>
                                </CArt_Data:DataGrid>
                            <!-- /Grid -->
                            </Grid>
                            <!-- Vertical Splitter -->
                            <CArt_Layout:Splitter x:Name="VerticalSplitter2" Width="6" CollapseButtonVisibility="Collapsed"  Background="Transparent" CollapseDirection="Left" Grid.Column="3" Grid.Row="2"/>

                            <Border BorderThickness="1,0,0,1" BorderBrush="#6593CF" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White" Grid.Row="2" Grid.Column="4" >
                                <!-- Display -->


                                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                    <TextBlock x:Name="subject" FontSize="15"  FontWeight="Bold" Text="Client-side Events together with Server-side Manipulation? " Margin="10" TextWrapping="Wrap"/>
                                    <TextBlock x:Name="startedby" Text="y0da2k" Margin="10,0,10,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="10,5,10,5">
                                        <TextBlock Text="Sent: " />
                                        <TextBlock x:Name="date" Text="7/25/2004 1:08:58 PM"/>
                                    </StackPanel>
                                    <Rectangle Margin="10,0,10,0" HorizontalAlignment="Stretch" Height="1" Fill="Gray" />
                                    <TextBlock x:Name="body" Text="Message body" TextWrapping="Wrap" Margin="10,5,10,5"/>
                                </StackPanel>

                                <!-- /Display -->
                            </Border>
                        </Grid>
                    </Border>
               </Border>
        </Grid>
    </Grid>
</UserControl>
