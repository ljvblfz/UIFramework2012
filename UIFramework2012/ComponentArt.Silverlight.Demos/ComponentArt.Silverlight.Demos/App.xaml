<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
             xmlns:local="clr-namespace:ComponentArt.Silverlight.Demos"
             xmlns:cartTheme="clr-namespace:ComponentArt.Silverlight.UI;assembly=ComponentArt.Silverlight.UI.Common" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="ComponentArt.Silverlight.Demos.App"
             mc:Ignorable="d">
    <Application.Resources>

        <!-- Button_CopyrightInfo (PageNew) -->
        <Style x:Key="Button_CopyrightInfo" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Width="132" Height="35" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImage"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.3" To="1" BeginTime="00:00:00.1"/>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageOver"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.5" To="0"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImage"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.5" To="0"/>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageOver"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.5" To="1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Image x:Name="ButtonImageOver" Source="../Assets/Demo/footer-componentArt-hover.png" Opacity="0"/>
                            <Image x:Name="ButtonImage" Source="../Assets/Demo/footer-componentArt.png" Opacity="1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END Button_CopyrightInfo -->

        <!-- MainComponentArtButton (PageNew) -->
        <Style x:Name="MainComponentArtButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Canvas Width="223" Height="74" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImage"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.2" To="1"/>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageOver"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.3" BeginTime="00:00:00.1" To="0"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImage"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.3" BeginTime="00:00:00.2" To=".35"/>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageOver"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.2" To="1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Image x:Name="ButtonImageOver" Source="../Assets/Demo/Logo-Hover.png" Opacity="0" Canvas.ZIndex="2"/>
                            <Image x:Name="ButtonImage" Source="../Assets/Demo/Logo-Normal.png" Opacity="1" Canvas.ZIndex="1"/>
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END MainComponentArtButton -->

        <!-- Button_Tabs (Tabs on PageNew and buttons on Index pages) -->
        <Style x:Key="Button_Tabs" TargetType="local:ImageButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ImageButton">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageHover"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="0"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="ButtonImageHover"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Image x:Name="ButtonImage" Source="{TemplateBinding ImageNormal}" Canvas.ZIndex="1" 
                                   VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="None" />
                            <Image x:Name="ButtonImageHover" Source="{TemplateBinding ImageHover}" Canvas.ZIndex="2" 
                                   VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="None" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END Button_Tabs -->

        <!-- Button_Controls (Menu Drop-Down) -->
        <Style x:Key="Button_Controls" TargetType="local:ImageButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ImageButton">
                        <Grid Background="Transparent" Margin="2,0,2,0" Width="128" Height="20"  >
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="HighlightBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="0"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="HighlightBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="HighlightBorder"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#e3e3e3" 
                                    BorderThickness="0" Opacity="0" CornerRadius="2" />
                            <Image Margin="8,0,0,0" x:Name="ButtonIcon" Source="{TemplateBinding ImageNormal}" HorizontalAlignment="Left" Height="16" Width="16" />
                            <TextBlock Margin="28,2,0,0" FontWeight="Thin" FontSize="11.4" FontFamily="Arial" Foreground="#FF0076A3" x:Name="ButtonContent" Text="{TemplateBinding Text}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END Button_Controls -->

        <!-- Button_Controls_Welcome (Welcome Page) -->
        <Style x:Key="Button_Controls_Welcome" TargetType="local:ImageButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ImageButton">
                        <Grid Background="Transparent" Margin="2,2,2,1" Width="128" Height="20" >
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="HighlightBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="0" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                       Storyboard.TargetName="HighlightBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       Duration="00:00:00.1" To="1" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="HighlightBorder"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#e3e3e3" 
                                    BorderThickness="0" Opacity="0" CornerRadius="2" />
                            <Image Margin="8,0,0,0" x:Name="ButtonIcon" Source="{TemplateBinding ImageNormal}" HorizontalAlignment="Left" Height="16" Width="16" />
                            <TextBlock Margin="28,2,0,0" FontWeight="Bold" FontFamily="Verdana" FontSize="11.75" Foreground="#FF0076A3" x:Name="ButtonContent" Text="{TemplateBinding Text}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END Button_Controls_Welcome -->

        <!-- Button_Controls_EdNav  (Editors and Navigation Index Pages) -->
        <Style x:Key="Button_Controls_EdNav" TargetType="local:ImageButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ImageButton">
                        <Grid Background="Transparent" >
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="UnderlineText" Storyboard.TargetProperty="Visibility" Duration="0">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="UnderlineText" Storyboard.TargetProperty="Visibility" Duration="0">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="HighlightBorder"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#e3e3e3" 
                                    BorderThickness="0" Opacity="0" CornerRadius="2" />
                            <Image HorizontalAlignment="Left" Margin="0,0,0,4" Width="36" Source="{TemplateBinding ImageNormal}" Stretch="None"/>
                            <TextBlock x:Name="NormalText" Margin="44,3,0,16" FontFamily="Verdana" FontSize="13.333" Foreground="#FF0076A3" Text="{TemplateBinding Text}" TextWrapping="Wrap"/>
                            <TextBlock x:Name="UnderlineText" Margin="44,3,0,16" FontFamily="Verdana" FontSize="13.333" Foreground="#FF0076A3" Text="{TemplateBinding Text}" TextWrapping="Wrap"
                                       TextDecorations="Underline" Visibility="Collapsed"/>
                            <TextBlock Margin="44,19,0,0" FontFamily="Verdana" FontSize="10.667" Foreground="#FF0076A3" Text="for Silverlight" TextWrapping="Wrap"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END Button_Controls_EdNav -->

        <!-- SmallIndexDemoButton (All Index Pages including Welcome Page) -->
        <Style x:Key="Style_SmallIndexDemoButton" TargetType="local:SmallIndexDemoButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:SmallIndexDemoButton">
                        <Grid Background="Transparent" Margin="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#00aaaaaa" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#00ffffff" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#00e3e3e3" Duration="00:00:00.1"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FFaaaaaa" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FFffffff" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#FFe3e3e3" Duration="00:00:00.1"/>
                                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="rectangle" 
                                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="585">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <CubicEase EasingMode="EaseIn"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                            </VisualStateManager.VisualStateGroups>

                            <Border x:Name="OuterBorder" BorderBrush="#00aaaaaa" BorderThickness="1" CornerRadius="2" >
                                <Grid>
                                    <Border x:Name="InnerBorder" BorderBrush="#00ffffff" BorderThickness="2" CornerRadius="1.5" Padding="4">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                                                <GradientStop Color="#00e2e2e2" Offset=".75"/>
                                                <GradientStop Color="#00e2e2e2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel>
                                            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Background="Transparent"  
                                        		HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalAlignment="Top"
                                        		Padding="0" Margin="0" UseLayoutRounding="False" BorderThickness="0"  >
                                                <Grid VerticalAlignment="Top" UseLayoutRounding="False">
                                                    <Image Source="{TemplateBinding ButtonImage}" Stretch="None" VerticalAlignment="Top" 
                                        				Margin="0,0,0,0"/>
                                                    <Rectangle x:Name="rectangle" Fill="#55FFFFFF" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" 
                                                           Canvas.Left="-97.056" Canvas.Top="-60.943" Margin="-109.618,-32.214,0,-138.397" 
                                        				   HorizontalAlignment="Left" Width="43" >
                                                        <Rectangle.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="16.66"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </Rectangle.RenderTransform>
                                                    </Rectangle>
                                                </Grid>
                                            </ScrollViewer>
                                            <TextBlock Margin="0,3,0,0" VerticalAlignment="Top" FontFamily="Verdana" 
                                                   FontSize="12" Foreground="#FF0076A3" FontWeight="Bold"
                                                   Text="{TemplateBinding HeaderText}" TextWrapping="NoWrap"/>
                                            <ContentControl Content="{TemplateBinding Content}" VerticalAlignment="Top" Margin="0,3,0,0" />
                                        </StackPanel>
                                    </Border>
                                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0"/>
                                </Grid>
                            </Border>
                            
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- END SmallIndexDemoButton -->

        <!-- IndexRollOverButton (Welcome Page) -->
        <Style x:Key="Style_IndexRollOverButton" TargetType="local:SmallIndexDemoButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:SmallIndexDemoButton">
                        <Grid Background="Transparent" Margin="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderBrush).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#00e3e3e3" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#00e3e3e3" Duration="00:00:00.1"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderBrush).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#FFe3e3e3" Duration="00:00:00.1"/>
                                            <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            To="#FFe3e3e3" Duration="00:00:00.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
