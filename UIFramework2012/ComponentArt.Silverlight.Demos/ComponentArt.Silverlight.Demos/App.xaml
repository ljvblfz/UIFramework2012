                                <ScrollBar Margin="0,3,3,3" x:Name="VerticalScrollBar" Style="{StaticResource ComponentArt_ScrollBar}" Width="11" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" IsTabStop="False" Grid.Column="1" Grid.Row="0" Orientation="Vertical" ViewportSize="{TemplateBinding ViewportHeight}" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Value="{TemplateBinding VerticalOffset}" />
