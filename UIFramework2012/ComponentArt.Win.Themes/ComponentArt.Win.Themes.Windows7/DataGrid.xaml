<!-- ComponentArt:DataGridGroup -->
    <Style TargetType="ComponentArt:DataGridGroup">
    <Setter Property="Indent" Value="20" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ComponentArt:DataGridGroup">
          <Grid x:Name="RootElement" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="20"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Padding="0" Height="23" BorderBrush="#00ffffff" BorderThickness="0,1,0,1" Grid.ColumnSpan="2">
              <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                  <GradientStop Color="#ffffff" Offset="0"/>
                  <GradientStop Color="#ffffff" Offset="0.47" />
                  <GradientStop Color="#b0bfde" Offset="0.47" />
                  <GradientStop Color="#b0bfde" Offset="0.5" />
                  <GradientStop Color="#ffffff" Offset="0.5" />
                  <GradientStop Color="#ffffff" Offset="1"/>
                </LinearGradientBrush>
              </Border.Background>
            </Border>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0" Grid.Column="1" >
              <StackPanel Orientation="Horizontal" Background="#ffffff">
                <TextBlock Text="{ TemplateBinding Field }" Foreground="#003399" Padding="4,0,0,0" />
                <TextBlock Text=": " Foreground="#003399" />
                <TextBlock Text="{TemplateBinding ValueText}" Foreground="#003399" Padding="0,0,4,0" />
              </StackPanel>
            </StackPanel>
            <StackPanel x:Name="GroupRows" Orientation="Vertical" Background="#ffffff" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" />
            <Border BorderThickness="0" Background="#ffffff" />
            <!-- A solid white block behind the following buttons -->
            <Button x:Name="ExpandButton" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupExpandButton}" />
            <Button x:Name="CollapseButton" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupCollapseButton}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
<!-- ComponentArt:DataGridColumnHeader -->
    <Style TargetType="ComponentArt:DataGridColumnHeader">
    <Setter Property="Height" Value="22" />
    <Setter Property="BorderThickness" Value="1,0,0,1" />
    <Setter Property="Cursor" Value="Arrow" />
    <Setter Property="BorderBrush" Value="{ StaticResource ComponentArt_DataGrid_ColumnHeaderBorderBrush }" />
    <Setter Property="Background" Value="{ StaticResource ComponentArt_DataGrid_ColumnHeaderBackground }" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Padding" Value="4,0,0,0" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ComponentArt:DataGridColumnHeader">
          <Grid x:Name="RootElement" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Cursor="{ TemplateBinding Cursor }" Height="{ TemplateBinding Height }">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <vsm:VisualStateManager.VisualStateGroups>
              <vsm:VisualStateGroup x:Name="CommonStates">
                <vsm:VisualState x:Name="Normal" />
                <vsm:VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ColumnHeaderHoverBorder" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1" />
                  </Storyboard>
                </vsm:VisualState>
              </vsm:VisualStateGroup>
            </vsm:VisualStateManager.VisualStateGroups>
            <Border
              Height="{ TemplateBinding Height }"
              BorderBrush="{ TemplateBinding BorderBrush }"
              Background="{ TemplateBinding Background }"
              x:Name="ColumnHeaderBorder"
              BorderThickness="{ TemplateBinding BorderThickness }"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
							/>
            <Border
              Height="{TemplateBinding Height}"
              BorderBrush="{ StaticResource ComponentArt_DataGrid_ColumnHeaderHoverBorderBrush }"
              Background="{ StaticResource ComponentArt_DataGrid_ColumnHeaderHoverBackground }"
              x:Name="ColumnHeaderHoverBorder"
              BorderThickness="{ TemplateBinding BorderThickness }"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Opacity="0"
							/>
            <ContentPresenter
              Content="{TemplateBinding Content}"
              ContentTemplate="{TemplateBinding ContentTemplate}"
              Margin="{TemplateBinding Padding}"
              VerticalAlignment="{TemplateBinding VerticalAlignment}"
              HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
              />
            <ContentControl x:Name="AscendingArrow" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Template="{StaticResource ComponentArt_DataGrid_ColumnHeadingAscendingArrow}" />
            <ContentControl x:Name="DescendingArrow" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Template="{StaticResource ComponentArt_DataGrid_ColumnHeadingDescendingArrow}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
<!-- ComponentArt:DataGridGroupBox -->    
  <Style TargetType="ComponentArt:DataGridGroupBox">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid x:Name="RootElement" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="24"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>
            <Border Padding="0" BorderBrush="#45ffffff" BorderThickness="1,1,0,0" Grid.ColumnSpan="3" CornerRadius="0" Margin="0,0,4,0">
              <Border Padding="5,5,8,5" BorderBrush="#45000000" BorderThickness="0,0,1,1" CornerRadius="0" />
            </Border>
            <ContentControl x:Name="GroupByGlyph" Template="{ StaticResource ComponentArt_DataGrid_GroupByGlyph }" Margin="0" Grid.Column="0" />
            <TextBlock Padding="0,6,0,6" FontWeight="Bold" Foreground="White" Text="{Binding ColumnName}" Grid.Column="1" />
            <Button Padding="0,7,7,7" Grid.Column="2" x:Name="AscendingArrow" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupingAscendingArrowButton}" />
            <Button Padding="0,7,7,7" Grid.Column="2" x:Name="DescendingArrow" Visibility="Collapsed" Style="{StaticResource ComponentArt_DataGrid_GroupingDescendingArrowButton}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
