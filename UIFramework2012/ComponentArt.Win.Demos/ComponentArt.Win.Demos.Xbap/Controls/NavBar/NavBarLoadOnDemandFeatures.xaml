<UserControl x:Class="ComponentArt.Win.Demos.NavBarLoadOnDemandFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:ComponentArt.Win.UI.Navigation;assembly=ComponentArt.Win.UI.Navigation"
    >
  <Grid>
  	<TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="NavBar" />
    <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Load on Demand Features" />
    <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo showcases NavBar's basic event-driven Load on Demand functionality." />
        <TextBlock 
        x:Name="DemoCodeFiles" 
        Visibility = "Collapsed"
        Text="\source\controls\NavBar\NavBarLoadOnDemandFeatures.xaml,\source\controls\NavBar\NavBarLoadOnDemandFeatures.xaml.cs" />

        <my:NavBar x:Name="MyNavBar" Height="400" Width="250" 
                   LoadOnDemand="MyNavBar_LoadOnDemand"
                   IsLoadOnDemandEnabled="True"
                   TextImageRelation="ImageBeforeText" 
                   GroupItemHeaderHorizontalAlignment="Left"
                   ItemHeaderHorizontalAlignment="Left"
                   />

    </Grid>
</UserControl>
