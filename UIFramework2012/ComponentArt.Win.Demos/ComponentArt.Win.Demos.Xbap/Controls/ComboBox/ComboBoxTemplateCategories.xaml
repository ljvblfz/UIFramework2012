        <DataTemplate x:Key="HeadingTemplate">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Border Background="LightBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="ItemText" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                               Foreground="DarkBlue" Grid.Column="2" FontSize="14" Text="{Binding Tag}" FontFamily="Arial" FontWeight="Bold"/>
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MyItemTemplate">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Border Background="LightSteelBlue"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="ItemText" Foreground="DarkBlue" Grid.Column="2" FontSize="14" Text="{Binding Text}" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
