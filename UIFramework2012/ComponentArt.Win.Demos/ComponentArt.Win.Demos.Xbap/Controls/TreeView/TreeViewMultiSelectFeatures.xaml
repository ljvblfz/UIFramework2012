<UserControl x:Class="ComponentArt.Win.Demos.TreeViewMultiSelectFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:ComponentArt.Win.UI.Navigation;assembly=ComponentArt.Win.UI.Navigation">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DemoCategory" Visibility="Collapsed" Text="TreeView" />
        <TextBlock x:Name="DemoTitle" Visibility="Collapsed" Text="Multiple Selection" />
        <TextBlock x:Name="DemoDescription" Visibility="Collapsed" Text="This demo showcases TreeView's multiple selection features." />
        <TextBlock 
        x:Name="DemoCodeFiles" 
        Visibility = "Collapsed"
        Text="\source\controls\treeview\TreeViewMultiSelectFeatures.xaml,
            \source\controls\treeview\TreeViewMultiSelectFeatures.xaml.cs" />
        <Border Grid.Row="1" Grid.Column="3" Margin="50 0 0 0" HorizontalAlignment="Left" Width="250" Height="300" CornerRadius="5" Background="#eeeeee" BorderBrush="#cccccc" BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" VerticalAlignment="Top" x:Name="LongDescription" Margin="10 10 10 5" Visibility="Visible" TextWrapping="Wrap">
                <Run>Click on any node to select it, and click again to de-select it.</Run><LineBreak /><LineBreak />
                <Run>Selected nodes:</Run>
                </TextBlock>
                <ListBox Grid.Row="1" x:Name="selection" Margin="10 0 0 10" Width="230" HorizontalAlignment="Left" />
            </Grid>
        </Border>
        <my:TreeView x:Name="MultiSelectTree"
                     Width="250" Height="400" MultiSelect="Click" >
            <my:TreeViewNode Header="Mailbox"  IconSource="/assets/TreeView/Core/root.png" IsExpanded="True">
                <my:TreeViewNode Header="Calendar"   IconSource="/assets/TreeView/Core/calendar.png" IsExpanded="False" />
                <my:TreeViewNode Header="Contacts" IconSource="/assets/TreeView/Core/contacts.png" />
                <my:TreeViewNode Header="Deleted Items"  IconSource="/assets/TreeView/Core/deleted.png">
                    <my:TreeViewNode Header="Today"  IconSource="/assets/TreeView/Core/deletedFolder.png" />
                    <my:TreeViewNode Header="Last Week" IconSource="/assets/TreeView/Core/deletedFolder.png" />
                    <my:TreeViewNode Header="Last Month" IconSource="/assets/TreeView/Core/deletedFolder.png" />
                </my:TreeViewNode>
                <my:TreeViewNode Header="Drafts"  IconSource="/assets/TreeView/Core/drafts.png" />
                <my:TreeViewNode Header="Inbox"  IconSource="/assets/TreeView/Core/inbox.png" IsExpanded="True">
                    <my:TreeViewNode Header="ComponentArt" IconSource="/assets/TreeView/Core/folders.png" />
                    <my:TreeViewNode Header="Personal" IconSource="/assets/TreeView/Core/folders.png" />
                    <my:TreeViewNode Header="Miscellaneous"  IconSource="/assets/TreeView/Core/folders.png" />
                </my:TreeViewNode>
                <my:TreeViewNode Header="Junk E-mail"  IconSource="/assets/TreeView/Core/junk.png" />
                <my:TreeViewNode Header="Notes"  IconSource="/assets/TreeView/Core/notes.png" />
                <my:TreeViewNode Header="Outbox"  IconSource="/assets/TreeView/Core/outbox.png" />
                <my:TreeViewNode Header="Sent Items"  IconSource="/assets/TreeView/Core/sentItems.png" />
                <my:TreeViewNode Header="Tasks"  IconSource="/assets/TreeView/Core/tasks.png" />
                <my:TreeViewNode Header="Search Folders"  IconSource="/assets/TreeView/Core/search.png" />
            </my:TreeViewNode>
            <my:TreeViewNode Header="Mailbox - News"  IconSource="/assets/TreeView/Core/folders.png" IsExpanded="True">
                <my:TreeViewNode Header="World"  IconSource="/assets/TreeView/Core/folder.png" >
                </my:TreeViewNode>
                <my:TreeViewNode Header="Business"  IconSource="/assets/TreeView/Core/folder.png" />
                <my:TreeViewNode Header="Science"  IconSource="/assets/TreeView/Core/folder.png" />
                <my:TreeViewNode Header="Weather"  IconSource="/assets/TreeView/Core/folder.png" />
            </my:TreeViewNode>
        </my:TreeView>

    </Grid>
</UserControl>
