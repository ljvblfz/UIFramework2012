                                        Margin="0,0,313,20" VerticalAlignment="Bottom" Style="{StaticResource Style_SmallIndexDemoButton}" HeaderText="MaskedInput" ImgHeight="124" ImgWidth="149"
                                        ButtonImage="Assets/Pages/EditorsIndex/sl_ed_idx_maskedinput.png" HorizontalAlignment="Right" Width="160">
                <TextBlock FontFamily="Verdana" TextWrapping="Wrap" VerticalAlignment="Bottom"
				HorizontalAlignment="Left" Width="149"  FontSize="11"  
				FontStretch="Expanded"><Run Text="Fast, lightweight, versatile, featuring fluid animation and comfortable feel."/></TextBlock>
            </local:SmallIndexDemoButton>
            
            <local:DemoList HorizontalAlignment="Right" Width="242" Margin="13,0,8,0" Header="/ComponentArt.Win.Demos;component/Assets/Pages/EditorsIndex/list_header.png">
                <local:DemoList.Controls>
