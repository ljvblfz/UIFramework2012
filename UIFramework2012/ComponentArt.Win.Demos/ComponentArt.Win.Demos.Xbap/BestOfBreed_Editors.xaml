			<Path Fill="White" Stretch="Fill" Stroke="White" HorizontalAlignment="Right" Margin="0,0,265,0" Width="1" Data="M809,0 L809,652"/>
			<Image Height="18" HorizontalAlignment="Left" Margin="18,18,0,0" VerticalAlignment="Top" Width="441" Source="Assets/Pages/EditorsIndex/heading_bob_editors.png" Stretch="Fill"/>
            <local:ImageButton Height="31.15" Width="145.5" Margin="475,165,456,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_combobox.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_combobox_over.png" Tag="control ComboBox" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}" />
			<!--<local:ImageButton Height="31.15" Width="145.5" Margin="475,165,456,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_htmleditor.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_htmleditor_over.png" Tag="control HtmlEditor" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}"/>-->
			<local:ImageButton Height="31.15" Width="145.5" HorizontalAlignment="Right" Margin="475,245,456,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_numberinput.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_numberinput_over.png" Tag="control NumberInput" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}"/>
			<local:ImageButton Height="31.15" Margin="475,284,455.5,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_rangeslider.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_rangeslider_over.png" Tag="control RangeSlider" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}"/>
			<!--<local:ImageButton Height="31.15" Width="145.5" HorizontalAlignment="Right" Margin="0,245,306,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_upload.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_upload_over.png" Tag="control Upload" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}"/>-->
			<local:ImageButton Height="31.15" Width="145.5" Margin="475,205,456,0" VerticalAlignment="Top" ImageNormal="Assets/Pages/EditorsIndex/button_maskedinput.png" 
                               ImageHover="Assets/Pages/EditorsIndex/button_maskedinput_over.png" Tag="control MaskedInput" Click="ControlButton_Click" Style="{StaticResource Button_ControlButtons}"/>
