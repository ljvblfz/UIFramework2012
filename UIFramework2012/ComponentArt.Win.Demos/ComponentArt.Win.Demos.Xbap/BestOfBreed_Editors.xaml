                                        Margin="214,0,0,20" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                        Style="{StaticResource Style_SmallIndexDemoButton}" HeaderText="RangeSlider" ImgHeight="124" ImgWidth="149"
                                        ButtonImage="Assets/Pages/EditorsIndex/sl_ed_idx_rangeslider.png">
                <TextBlock FontFamily="Verdana" TextWrapping="Wrap" VerticalAlignment="Bottom"
				HorizontalAlignment="Left" Width="149"  FontSize="11"
				FontStretch="Expanded"><Run Text="Powerful, flexible, feautring the ability to integrate with Charts."/></TextBlock>
            </local:SmallIndexDemoButton>

            <local:SmallIndexDemoButton Tag="control NumberInputCoreFeatures" Click="DemoButton_Click" Height="216" 
                                        Margin="408,0,508,20" VerticalAlignment="Bottom" Style="{StaticResource Style_SmallIndexDemoButton}" HeaderText="NumberInput" ImgHeight="124" ImgWidth="149"
                                        ButtonImage="Assets/Pages/EditorsIndex/sl_ed_idx_numberinput.png">
                <TextBlock FontFamily="Verdana" TextWrapping="Wrap" VerticalAlignment="Bottom"
				HorizontalAlignment="Left" Width="149"  FontSize="11"
				FontStretch="Expanded"><Run Text="Fast, lightweight, versatile, featuring fluid animation and comfortable feel."/></TextBlock>
            </local:SmallIndexDemoButton>

